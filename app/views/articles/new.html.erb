<h1>New article</h1>

<%= turbo_frame_tag "new_article", target: "_top" do %>
  <%= form_with(model: [ @article.room, @article ]) do | form | %>
    <div class="field">
      <%= form.text_field :content %>
      <%= form.check_box :marked %>
      <%= form.submit "send" %>
    </div>
  <% end %>
<% end %>
<%= link_to 'Back', @article.room %>
